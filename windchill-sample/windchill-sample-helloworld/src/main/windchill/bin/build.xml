<project name="windchill-sample-helloworld" xmlns:antc="antlib:net.sf.antcontrib" basedir="../../../..">
	<import file="./commons/common-env.xml" />
	<import file="./commons/common-maven.xml" />
	<import file="./commons/common-services.xml" />

	<target name="installWindchillDependenciesToLocalRepo" depends="initWindchillVersion">
		<mvnInstallFile file="${wt.srclib.wnc}${file.separator}Foundation.jar" groupId="com.ptc.wnc" artifactId="Foundation" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib.wnc}${file.separator}CommonCore.jar" groupId="com.ptc.wnc" artifactId="CommonCore" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib}${file.separator}tool${file.separator}Annotations.jar" groupId="com.ptc.tool" artifactId="Annotations" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib}${file.separator}jmxcore${file.separator}WtLogR.jar" groupId="com.ptc.jmxcore" artifactId="WtLogR" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib}${file.separator}wnc${file.separator}Boot.jar" groupId="com.ptc.wnc" artifactId="Boot" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib}${file.separator}log4j.jar" groupId="com.ptc" artifactId="log4j" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib}${file.separator}jmxcore${file.separator}WtHttpClientAddOns.jar" groupId="com.ptc.jmxcore" artifactId="WtHttpClientAddOns" version="${windchill.version}" />
		<mvnInstallFile file="${wt.srclib}${file.separator}servlet.jar" groupId="com.ptc" artifactId="servlet" version="${windchill.version}" />
		
	</target>

	<target name="deploy">
		<copy todir="${wt.codebase.webinf.lib}" preservelastmodified="true">
			<fileset dir="${basedir}${file.separator}target${file.separator}">
				<include name="**/windchill-sample-helloworld*.jar"/>
			</fileset>
		</copy>
	</target>

	<target name="pre-integration-test" depends="windchill:stop, deploy, windchill:start" />
</project>