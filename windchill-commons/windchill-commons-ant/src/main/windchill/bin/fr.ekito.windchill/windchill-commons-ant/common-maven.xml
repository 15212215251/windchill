<project name="common-maven.xml" default="help" xmlns:antc="antlib:net.sf.antcontrib">

	<import file="./common-env.xml" />

	<property name="m2" value="${env.M2}" />

	<condition property="m2.executable" value="${m2}\mvn.bat" else="${m2}\mvn">
		<os family="windows" />
	</condition>

	<target name="help" depends="">
		<echo message="Execute ant for a project with -projecthelp argument." />
		<echo message="   ant -projecthelp" />
	</target>

	<target name="mavenInstallAllWindchillJars" depends="initWindchillVersion">
		<jar destfile="${user.home}/tmp/windchill.jar"
		       basedir="${wt.codebase}"
		       includes="**/*.class"
		  />
		<mvnInstallFile file="${user.home}/tmp/windchill.jar" groupid="com.ptc" artifactid="windchill" version="${windchill.version}"/>

		<!--Windchill libraries provided dependencies-->
		<mvnInstallFile file="${wt.lib}${file.separator}wnc.jar" groupid="com.ptc" artifactid="wnc" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.lib}${file.separator}pdml.jar" groupid="com.ptc" artifactid="pdml" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.lib}${file.separator}pjl.jar" groupid="com.ptc" artifactid="pjl" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.lib}${file.separator}reql.jar" groupid="com.ptc" artifactid="reql" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.lib}${file.separator}servlet.jar" groupid="com.ptc" artifactid="servlet" version="${windchill.version}"/>

		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}wncWeb.jar" groupid="com.ptc" artifactid="wncWeb" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}pdmlWeb.jar" groupid="com.ptc" artifactid="pdmlWeb" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}pjlWeb.jar" groupid="com.ptc" artifactid="pjlWeb" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}reqlWeb.jar" groupid="com.ptc" artifactid="reqlWeb" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}ie3rdpartylibs.jar" groupid="com.ptc" artifactid="ie3rdpartylibs" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}wc3rdpartylibs.jar" groupid="com.ptc" artifactid="wc3rdpartylibs" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.codebase.webinf.lib}${file.separator}RMWebServices.jar" groupid="com.ptc" artifactid="RMWebServices" version="${windchill.version}"/>

		<!--Windchill libraries for annotations processing-->
		<mvnInstallFile file="${wt.srclib}${file.separator}tool${file.separator}Annotations.jar" groupid="com.ptc" artifactid="Annotations" version="${windchill.version}"/>
		<mvnInstallFile file="${wt.srclib}${file.separator}tool${file.separator}AnnotationProcessing.jar" groupid="com.ptc" artifactid="AnnotationProcessing" version="${windchill.version}"/>

		<!--Windchill libraries test dependencies-->
		<mvnInstallFile file="${wt.srclib}${file.separator}wnc${file.separator}Boot.jar" groupid="com.ptc" artifactid="Boot" version="${windchill.version}"/>

	</target>

	<macrodef name="mvnInstallJarFolder">
		<attribute name="folder" />
		<attribute name="groupId" />
		<attribute name="version" />
		<attribute name="packaging" default="jar"/>
		<attribute name="generatePom" default="true"/>
		<attribute name="createChecksum" default="true"/>
		<sequential>

			<antc:for param="artifact.file">
				<fileset dir="@{folder}" includes="*.jar" />
				<sequential>
					<var name="artifact.fileName" unset="true"/>
					<basename property="artifact.fileName" file="@{artifact.file}" suffix=".jar"/>
					<mvnInstallFile file="@{artifact.file}" groupId="@{groupId}" artifactId="${artifact.fileName}" version="${windchill.version}" packaging="@{packaging}" generatePom="@{generatePom}" createChecksum="@{createChecksum}" />
				</sequential>
			</antc:for>
		</sequential>
	</macrodef>
	
	<macrodef name="mvnInstallFile">
		<attribute name="file" />
		<attribute name="groupId" />
		<attribute name="artifactId" />
		<attribute name="version" />
		<attribute name="packaging" default="jar"/>
		<attribute name="generatePom" default="true"/>
		<attribute name="createChecksum" default="true"/>
		<sequential>
			<echo>
			Installing jar in maven repository
			FilePath : @{file}
			GroupId	: @{groupId}
			ArtifactId	: @{artifactId}
			Version : @{version}
			</echo>
			<exec executable="${m2.executable}">
				<arg line="install:install-file -Dfile=@{file} -DgroupId=@{groupId} -DartifactId=@{artifactId} -Dversion=@{version} -Dpackaging=@{packaging} -DgeneratePom=@{generatePom} -DcreateChecksum=@{createChecksum}" />
			</exec>
		</sequential>
	</macrodef>
</project>